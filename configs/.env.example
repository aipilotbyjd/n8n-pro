# N8N Pro Configuration Environment Variables
# Copy this file to .env and configure your settings

# ============================================================================
# Application Configuration
# ============================================================================

# Application name and version
N8N_PRO_APP_NAME=n8n-pro
N8N_PRO_APP_VERSION=1.0.0

# Environment: development, staging, production
N8N_PRO_APP_ENVIRONMENT=development

# Server configuration
N8N_PRO_APP_PORT=8080
N8N_PRO_APP_HOST=0.0.0.0
N8N_PRO_APP_BASE_URL=http://localhost:8080

# Debug mode (disable in production)
N8N_PRO_APP_DEBUG=true

# Maintenance mode
N8N_PRO_APP_MAINTENANCE=false

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================

N8N_PRO_DATABASE_HOST=localhost
N8N_PRO_DATABASE_PORT=5432
N8N_PRO_DATABASE_NAME=n8n_pro
N8N_PRO_DATABASE_USER=n8n_user
N8N_PRO_DATABASE_PASSWORD=your_secure_password_here

# SSL mode: disable, require, verify-ca, verify-full
N8N_PRO_DATABASE_SSL_MODE=disable

# Connection pool settings
N8N_PRO_DATABASE_MAX_CONNECTIONS=25
N8N_PRO_DATABASE_MAX_IDLE_CONNS=5
N8N_PRO_DATABASE_CONN_MAX_LIFETIME=300s
N8N_PRO_DATABASE_CONN_MAX_IDLE_TIME=300s

# ============================================================================
# Redis Configuration
# ============================================================================

N8N_PRO_REDIS_HOST=localhost
N8N_PRO_REDIS_PORT=6379
N8N_PRO_REDIS_PASSWORD=
N8N_PRO_REDIS_DATABASE=0

# Connection settings
N8N_PRO_REDIS_MAX_RETRIES=3
N8N_PRO_REDIS_DIAL_TIMEOUT=5s
N8N_PRO_REDIS_READ_TIMEOUT=3s
N8N_PRO_REDIS_WRITE_TIMEOUT=3s
N8N_PRO_REDIS_POOL_SIZE=10

# ============================================================================
# Authentication Configuration
# ============================================================================

# JWT secret (must be at least 32 characters in production)
N8N_PRO_AUTH_JWT_SECRET=your_super_secret_jwt_key_here_32_chars_minimum

# Token expiration times
N8N_PRO_AUTH_JWT_EXPIRATION=24h
N8N_PRO_AUTH_REFRESH_TOKEN_EXPIRATION=720h

# Password requirements
N8N_PRO_AUTH_PASSWORD_MIN_LENGTH=8
N8N_PRO_AUTH_PASSWORD_REQUIRE_SPECIAL=true

# Multi-factor authentication
N8N_PRO_AUTH_ENABLE_MFA=false

# Session and security
N8N_PRO_AUTH_SESSION_TIMEOUT=24h
N8N_PRO_AUTH_MAX_LOGIN_ATTEMPTS=5
N8N_PRO_AUTH_LOCKOUT_DURATION=15m

# ============================================================================
# Enterprise Features Configuration
# ============================================================================

# Enterprise features toggle
N8N_PRO_ENTERPRISE_ENABLED=false

# Enterprise encryption key (must be exactly 32 characters)
N8N_PRO_ENTERPRISE_ENCRYPTION_KEY=

# Enterprise license key
N8N_PRO_ENTERPRISE_LICENSE_KEY=

# Audit log retention (days)
N8N_PRO_ENTERPRISE_AUDIT_RETENTION_DAYS=365

# SAML Configuration
N8N_PRO_ENTERPRISE_SAML_ENABLED=false
N8N_PRO_ENTERPRISE_SAML_METADATA_URL=
N8N_PRO_ENTERPRISE_SAML_ENTITY_ID=
N8N_PRO_ENTERPRISE_SAML_CERTIFICATE=
N8N_PRO_ENTERPRISE_SAML_PRIVATE_KEY=

# LDAP Configuration
N8N_PRO_ENTERPRISE_LDAP_ENABLED=false
N8N_PRO_ENTERPRISE_LDAP_HOST=
N8N_PRO_ENTERPRISE_LDAP_PORT=389
N8N_PRO_ENTERPRISE_LDAP_USE_SSL=false
N8N_PRO_ENTERPRISE_LDAP_BIND_DN=
N8N_PRO_ENTERPRISE_LDAP_BIND_PASSWORD=
N8N_PRO_ENTERPRISE_LDAP_BASE_DN=
N8N_PRO_ENTERPRISE_LDAP_USER_FILTER=

# OAuth Providers
# Google OAuth
N8N_PRO_ENTERPRISE_OAUTH_GOOGLE_ENABLED=false
N8N_PRO_ENTERPRISE_OAUTH_GOOGLE_CLIENT_ID=
N8N_PRO_ENTERPRISE_OAUTH_GOOGLE_CLIENT_SECRET=
N8N_PRO_ENTERPRISE_OAUTH_GOOGLE_REDIRECT_URL=

# GitHub OAuth
N8N_PRO_ENTERPRISE_OAUTH_GITHUB_ENABLED=false
N8N_PRO_ENTERPRISE_OAUTH_GITHUB_CLIENT_ID=
N8N_PRO_ENTERPRISE_OAUTH_GITHUB_CLIENT_SECRET=
N8N_PRO_ENTERPRISE_OAUTH_GITHUB_REDIRECT_URL=

# Microsoft OAuth
N8N_PRO_ENTERPRISE_OAUTH_MICROSOFT_ENABLED=false
N8N_PRO_ENTERPRISE_OAUTH_MICROSOFT_CLIENT_ID=
N8N_PRO_ENTERPRISE_OAUTH_MICROSOFT_CLIENT_SECRET=
N8N_PRO_ENTERPRISE_OAUTH_MICROSOFT_REDIRECT_URL=

# ============================================================================
# Security Configuration
# ============================================================================

# Encryption and TLS
N8N_PRO_SECURITY_ENCRYPTION_ENABLED=true
N8N_PRO_SECURITY_TLS_ENABLED=false
N8N_PRO_SECURITY_TLS_CERT_FILE=
N8N_PRO_SECURITY_TLS_KEY_FILE=

# Rate Limiting
N8N_PRO_SECURITY_RATE_LIMITING_ENABLED=true
N8N_PRO_SECURITY_RATE_LIMITING_RPS=100
N8N_PRO_SECURITY_RATE_LIMITING_BURST=200
N8N_PRO_SECURITY_RATE_LIMITING_WINDOW_SIZE=1m

# CORS Configuration
N8N_PRO_SECURITY_CORS_ENABLED=true
N8N_PRO_SECURITY_CORS_ALLOWED_ORIGINS=*
N8N_PRO_SECURITY_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
N8N_PRO_SECURITY_CORS_ALLOWED_HEADERS=*
N8N_PRO_SECURITY_CORS_ALLOW_CREDENTIALS=true
N8N_PRO_SECURITY_CORS_MAX_AGE=86400

# Input Validation
N8N_PRO_SECURITY_VALIDATION_MAX_REQUEST_SIZE=10485760
N8N_PRO_SECURITY_VALIDATION_REQUEST_TIMEOUT=30s
N8N_PRO_SECURITY_VALIDATION_ENABLE_SQL_INJECTION=true
N8N_PRO_SECURITY_VALIDATION_ENABLE_XSS_PROTECTION=true
N8N_PRO_SECURITY_VALIDATION_MAX_FIELD_LENGTH=10000

# ============================================================================
# Monitoring and Metrics
# ============================================================================

N8N_PRO_MONITORING_ENABLED=true
N8N_PRO_MONITORING_METRICS_PORT=9090
N8N_PRO_MONITORING_HEALTH_PORT=8081
N8N_PRO_MONITORING_PROMETHEUS_PATH=/metrics
N8N_PRO_MONITORING_HEALTH_PATH=/health

# ============================================================================
# Email Configuration
# ============================================================================

# Email provider: smtp, sendgrid, mailgun
N8N_PRO_EMAIL_PROVIDER=smtp

# SMTP Configuration
N8N_PRO_EMAIL_HOST=smtp.gmail.com
N8N_PRO_EMAIL_PORT=587
N8N_PRO_EMAIL_USERNAME=your-email@gmail.com
N8N_PRO_EMAIL_PASSWORD=your-app-password
N8N_PRO_EMAIL_FROM_ADDRESS=noreply@yourcompany.com
N8N_PRO_EMAIL_FROM_NAME=N8N Pro
N8N_PRO_EMAIL_USE_TLS=true

# ============================================================================
# Storage Configuration
# ============================================================================

# Storage provider: local, s3, azure, gcs
N8N_PRO_STORAGE_PROVIDER=local
N8N_PRO_STORAGE_LOCAL_PATH=./storage

# AWS S3 Configuration
N8N_PRO_STORAGE_S3_REGION=us-east-1
N8N_PRO_STORAGE_S3_BUCKET=your-bucket-name
N8N_PRO_STORAGE_S3_ACCESS_KEY_ID=
N8N_PRO_STORAGE_S3_SECRET_ACCESS_KEY=
N8N_PRO_STORAGE_S3_ENDPOINT=

# Azure Blob Storage Configuration
N8N_PRO_STORAGE_AZURE_ACCOUNT_NAME=
N8N_PRO_STORAGE_AZURE_ACCOUNT_KEY=
N8N_PRO_STORAGE_AZURE_CONTAINER_NAME=

# Google Cloud Storage Configuration
N8N_PRO_STORAGE_GCS_PROJECT_ID=
N8N_PRO_STORAGE_GCS_BUCKET=
N8N_PRO_STORAGE_GCS_CREDENTIALS_FILE=

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: debug, info, warn, error
N8N_PRO_LOGGING_LEVEL=info

# Log format: json, text
N8N_PRO_LOGGING_FORMAT=json

# Log output: stdout, stderr, file
N8N_PRO_LOGGING_OUTPUT=stdout

# File logging settings (when output=file)
N8N_PRO_LOGGING_FILE=./logs/app.log
N8N_PRO_LOGGING_MAX_SIZE=100
N8N_PRO_LOGGING_MAX_BACKUPS=3
N8N_PRO_LOGGING_MAX_AGE=28
N8N_PRO_LOGGING_COMPRESS=true

# ============================================================================
# Additional Settings
# ============================================================================

# Set any additional custom environment variables here
# They will be available in your application through os.Getenv()

# Example custom variables:
# CUSTOM_API_ENDPOINT=https://api.example.com
# CUSTOM_FEATURE_FLAG=true
# CUSTOM_TIMEOUT=30s